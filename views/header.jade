a(name='home')
.intro-header
    .container
        .row
            .col-lg-12
                .intro-message
                    h1 Coaching Connection
                    h4 Coaching and training resources for athletes.
                    hr.intro-divider

                    div(ng-controller='headerCtrl')
                        div(ng-switch on='view.name')
                            ul.list-inline.intro-buttons
                                // Default
                                li(ng-switch-default)
                                    a.btn.btn-default.btn-lg(ng-click="view.name = 'student'")
                                        span.header-button-text I Need A Coach
                                li(ng-switch-default)
                                    a.btn.btn-default.btn-lg(href='javascript:void(0)', ng-click="view.name = 'coach'")
                                        span.header-button-text I Am A Coach

                                // Student
                                li(ng-switch-when='student')
                                    a.btn.btn-default.btn-sm(href='javascript:void(0)', ng-click="view.name = 'null'")
                                        span.header-button-back-text Back
                                li(ng-switch-when='student')
                                    input.input.input-lg(type='text', name='sport', placeholder='Enter Your Sport', autocomplete='off', data-provide='typeahead', data-source='["Basketball","Soccer","Squash","Martial Arts","Fitness","Tennis","Baseball","Football","Ice Hockey","Field Hockey","Volleyball","Softball","Wrestling","Boxing","Triathlon","Running","Track \u0026 Field","Skiing","Snowboarding","Golf","Lacrosse","Rugby","Swimming","Yoga","Figure Skating","Dance","Kickboxing","Gymnastics","Cheerleading","Strength \u0026 Conditioning","Diving","Ultimate"]', _flx1_12_1='1', _flx1_13_1='1', _flx1_14_1='1')
                                li(ng-switch-when='student')
                                    a.btn.btn-default.btn-lg()
                                        span.header-button-text Find Coach
                                li(ng-switch-when='student')
                                    a.btn.btn-default.btn-lg()
                                        span.header-button-text View Calendar

                                // Trainer
                                li(ng-switch-when='coach')
                                    a.btn.btn-default.btn-sm(href='javascript:void(0)', ng-click="view.name = 'null'")
                                        span.header-button-back-text Back
